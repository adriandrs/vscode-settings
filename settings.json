// General editor settings
{
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "apc.electron": {
    "titleBarStyle": "hidden",
    "trafficLightPosition": {
      "x": 9,
      "y": 9
    }
  },

  //Tittle bar settings
  "window.commandCenter": false,
  "window.title": "VS Code",
  // "window.titleBarStyle": "custom",
  // "window.title": "${activeEditorShort}${separator}${rootName}",
  // "window.title": "${rootName}",
  // "window.title": "${}",
  // "window.title": " ",
  // "window.titleSeparator": " | ",

  // Window and margin settings
  "window.newWindowDimensions": "inherit",
  "editor.lineNumbers": "off",
  "editor.fontFamily": "Cascadia Code, Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 12.5,
  "editor.formatOnSave": true,
  "editor.hideCursorInOverviewRuler": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lightbulb.enabled": "off",
  "editor.linkedEditing": true,
  "editor.minimap.maxColumn": 80,
  "editor.minimap.renderCharacters": false,
  "editor.occurrencesHighlight": "off",

  // GitHub Copilot settings
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "java": false,
    "yaml": false,
    "javascript": false,
    "typescriptreact": true
  },

  // Terminal settings
  "terminal.integrated.defaultLocation": "view",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontFamily": "FiraCode Nerd Font, Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.location": "right",
  "terminal.integrated.profiles.windows": {
    "Command Prompt": {
      "args": [],
      "icon": "terminal-powershell",
      "path": [
        "${env:windir}\\Sysnative\\powershell",
        "${env:windir}\\System32\\powershell.exe"
      ]
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "PowerShell": {
      "icon": "terminal-powershell",
      "source": "PowerShell"
    }
  },

  // GitLens settings
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.blame.line.enabled": false, // was working in previous versions
  "gitlens.currentLine.enabled": false, // in modern version
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,

  // File explorer settings
  "symbols.hidesExplorerArrows": false,
  "explorer.compactFolders": false,
  "explorer.openEditors.visible": 1,

  // File decorations settings
  "files.exclude": {
    "/.classpath": true,
    "/.factorypath": true,
    "/.project": true,
    "/.settings": true
  },
  "files.watcherExclude": {
    "/.git/objects/": true,
    "/node_modules/": true
  },

  // Minimap settings
  "editor.minimap.autohide": true,

  // Indentation guide settings
  "indenticator.showIndentGuide": false,
  "editor.guides.highlightActiveBracketPair": false,
  "editor.guides.indentation": false,
  "indenticator.color.dark": "rgba(255,255,255,0.1)",
  "indenticator.color.light": "rgba(0,0,0,0.1)",
  "indenticator.hover.peekBack": 100,
  "indenticator.hover.peekForward": 100,
  "indenticator.inner.hover.peekBack": 0,
  "indenticator.inner.hover.peekForward": 1,
  "indenticator.showCurrentDepthInStatusBar": false,
  "indenticator.width": 0.1,
  "editor.bracketPairColorization.enabled": false,
  "editor.matchBrackets": "never",

  // Integrated terminal and Git settings
  "git.autofetch": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.persistentSessionReviveProcess": "onExitAndWindowClose",
  "restoreTerminals.keepExistingTerminalsOpen": true,
  "restoreTerminals.terminals": [],

  // Workbench settings
  "workbench.iconTheme": null,
  "workbench.colorTheme": "One Dark Pro",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.productIconTheme": "material-product-icons",
  "workbench.view.alwaysShowHeaderActions": true,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.startupEditor": "none",
  "workbench.layoutControl.type": "both",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.enablePreview": true,

  // Font and appearance settings
  "editor.fontWeight": "400",
  "window.zoomLevel": 0,
  "editor.multiCursorModifier": "alt",
  "window.density.editorTabHeight": "default",

  // Custom CSS settings for specific themes
  "workbench.colorCustomizations": {
    "list.focusOutline": "#00000000",

    "[Violaceous (rainglow)]": {
      "editorGutter.background": "#242038",
      "titleBar.activeBackground": "#242038",
      "titleBar.activeForeground": "#ffffff",
      "terminal.background": "#242038",
      "editorGroupHeader.tabsBackground": "#242038",
      "sideBar.background": "#242038",
      "sideBar.dropBackground": "#242038",
      "sideBar.foreground": "#c1b4ff93",
      "sideBarSectionHeader.foreground": "#ffffff",
      "sideBarSectionHeader.background": "#242038",
      "list.activeSelectionBackground": "#2a2642",
      "list.activeSelectionForeground": "#ffffff",
      "list.inactiveSelectionBackground": "#2a2642",
      "list.inactiveSelectionForeground": "#ffffff",
      "statusBar.background": "#242038",
      "activityBar.background": "#242038",
      "tab.activeBackground": "#2a2642",
      "titleBar.inactiveBackground": "#242038",
      "panel.background": "#242038",
      "panel.border": "#00000000"
    },
    "[Violaceous Light (rainglow)]": {
      "titleBar.activeBackground": "#dcd9e9"
    },
    "[mono-cl]": {
      "editorLineNumber.foreground": "#4b4b4b",
      "editor.lineHighlightBackground": "#2a2c2d",
      "editor.lineHighlightBorder": "#2a2c2d",
      "tab.activeBackground": "#2a2c2d",
      "panel.border": "#00000000",

      "terminal.background": "#191919",
      "terminal.foreground": "#A0A0A0",
      "terminalCursor.background": "#AA9175",
      "terminalCursor.foreground": "#AA9175",
      "terminal.ansiBlack": "#616161",
      "terminal.ansiBlue": "#4D4D4D",
      "terminal.ansiBrightBlack": "#474747",
      "terminal.ansiBrightBlue": "#8C8C8C",
      "terminal.ansiBrightCyan": "#DCDCDC",
      "terminal.ansiBrightGreen": "#8C8C8C",
      "terminal.ansiBrightRed": "#A9A9A9",
      "terminal.ansiBrightWhite": "#D8D8D8",
      "terminal.ansiBrightYellow": "#545454",
      "terminal.ansiCyan": "#C9C9C9",
      "terminal.ansiGreen": "#666666",
      "terminal.ansiRed": "#383838",
      "terminal.ansiWhite": "#A9A9A9",
      "terminal.ansiYellow": "#4D4D4D",
      "terminal.selectionBackground": "#4D4D4D"
    },
    "[Nord Flat]": {
      "sideBar.foreground": "#d5d5d5d7",
      "panel.border": "#00000000"
    },
    "[Theme Flat]": {
      "list.inactiveSelectionBackground": "#2c313c",
      "sideBar.border": "#00000000",
      "tab.activeBackground": "#2c313c",
      "titleBar.inactiveBackground": "#282c34",
      "panel.border": "#00000000"
    },
    "[Nord Dark Pro]": {
      "editorGroupHeader.tabsBackground": "#282c34",
      "sideBar.background": "#282c34",
      "list.inactiveSelectionBackground": "#2c313c",
      "statusBar.background": "#282c34",
      "titleBar.inactiveBackground": "#282c34",
      "panel.border": "#00000000"
    },
    "[Blueberry dark theme]": {
      "editor.lineHighlightBackground": "#2c313c",
      "sideBar.background": "#242938",
      "editor.background": "#242938",
      "editorGroupHeader.tabsBackground": "#242938",
      "list.inactiveSelectionBackground": "#2c313c",
      "list.activeSelectionBackground": "#2c313c",
      "list.activeSelectionForeground": "#ffffff",
      "list.hoverBackground": "#2c313c",
      "statusBar.background": "#242938",
      "activityBar.background": "#242938",
      "sideBarSectionHeader.background": "#242938",
      "sideBarSectionHeader.foreground": "#ffffff",
      "editorGutter.background": "#242938",
      "editorGroupHeader.tabsBorder": "#242938",
      "titleBar.activeBackground": "#242938",
      "titleBar.inactiveBackground": "#242938"
    },
    "[Serendipity Sunset]": {
      "titleBar.activeBackground": "#232038",
      "titleBar.inactiveBackground": "#232038",
      "terminal.background": "#232038",
      "panel.background": "#232038",
      "editor.background": "#232038",
      "sideBar.background": "#232038",
      "activityBar.background": "#232038",
      "menu.background": "#232038"
    },
    "[Tokyo Night Storm]": {
      "sideBar.background": "#1f2335",
      "editor.background": "#1f2335"
    },

    "window.titleBarStyle": ""
  },

  // Auto-save settings
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 10000,

  // Diff and SCM settings
  "diffEditor.hideUnchangedRegions.enabled": true,
  "scm.diffDecorations": "none",
  "scm.showIncomingChanges": "always",
  "scm.showOutgoingChanges": "always",

  // Other settings
  "breadcrumbs.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.renderWhitespace": "none",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "auto",
  "editor.suggestSelection": "first",
  "terminal.integrated.scrollback": 10000,
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.showFoldingControls": "mouseover",
  "editor.glyphMargin": false,
  "editor.padding.top": 5,
  "editor.folding": true,
  "editor.foldingStrategy": "auto",
  "workbench.preferredLightColorTheme": "GitHub Light",
  "workbench.preferredDarkColorTheme": "mono-cl",
  "tailwind-fold.unfoldIfLineSelected": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "apc.font.family": "Dank Mono, Consolas, 'Courier New', monospace",
  "chat.editor.fontSize": 11,
  "chat.editor.wordWrap": "on",
  "editor.renderLineHighlight": "none",

  "vscode_custom_css.imports": [
    "file:///c:/Users/adrs1/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.2/dist/updateHandler.js"
  ],

  "window.autoDetectColorScheme": true,
  "oneDarkPro.bold": true,
  "workbench.preferredHighContrastLightColorTheme": "Atom One Light",
  "oneDarkPro.vivid": true,
  "gitlens.graph.minimap.enabled": false,
  "gitlens.graph.minimap.additionalTypes": ["tags"],
  "gitlens.graph.layout": "editor",
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.reduceMotion": "on",
  "terminal.integrated.env.windows": {},
  "github.copilot.editor.enableAutoCompletions": true,
  "console-ninja.featureSet": "Community",
  "tailwind-fold.autoFold": false,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "window.menuBarVisibility": "compact",
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": false,
  "workbench.activityBar.location": "hidden"
}
